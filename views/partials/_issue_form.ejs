            <!-- Title -->
            <div class="mb-3 row">
              <label for="titlelabel" class="col-sm-2 col-form-label">Title</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="title" id="titlelabel" placeholder="Title" required>
              </div>
            </div>
            
            <!-- Description -->
             <div class="mb-3 row">
              <label for="descriptionlabel" class="col-sm-2 col-form-label">Description</label>
              <div class="col-sm-10">
                <textarea class="form-control" name="description" id="descriptionlabel" placeholder="Describe your issue..." required></textarea>
              </div>
            </div>
  
            <!-- Labels Header -->
            <div class="mb-3 row">
              <div class="col-sm-12">
                <label class="form-label">Labels</label>
              </div>
            </div>

            <% if (project.labels && project.labels.length > 0) { %>
                <div class="mb-3 row">
                  <div class="col-sm-2 col-form-label">Project Labels</div>
                  <div class="col-sm-10">
                    <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Choose Labels
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <% project.labels.forEach(label => { %>
                          <li><a class="dropdown-item" href="#"><%= label %></a></li>
                        <% }); %>
                      </ul>
                    </div>
                  </div>
                </div>
              <% } %>
  
            <!-- Add Labels -->
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Add Labels</label>
                <div class="col-sm-10">
                  <% ['Bug', 'UI Improvement', 'Documentation', 'Enhancement', 'Duplicate'].forEach(label => { %>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="checkbox" name="labels" value="<%= label %>" id="<%= label.toLowerCase().replace(' ', '-') %>">
                      <label class="form-check-label" for="<%= label.toLowerCase().replace(' ', '-') %>"><%= label %></label>
                    </div>
                  <% }); %>
                </div>
              </div>
            
              
            <!-- Author -->
            <div class="mb-3 row">
              <label for="authorlabel" class="col-sm-2 col-form-label">Author</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="author" id="authorlabel" placeholder="Author" required>
              </div>
            </div>
          </div>
          
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Create Issue</button>
          </div>
        </form>
      </div>
    </div>
  </div>
   

