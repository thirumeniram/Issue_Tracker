<head>
    <style>
      .card {
        background-color: rgb(245, 246, 246);
      }
    </style>
  </head>
  
  <body>
    <!-- Your HTML code here -->
    <div class="mb-5 p-5">
      <% for( let project of projects ) { %>
        <div class="card mb-2 w-50 m-auto">
          <div class="card-header">
            <strong> Name of the project : </strong>
            <%= project.name %>
          </div>
          <div>
            <a href="/project/delete/?id=<%=project.id%>" class="delete-link">
              <i class="fa-solid fa-trash fa-bounce" style="color: #1f5120;"></i>
            </a>
          </div>
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">
              <strong> Author : </strong>
              <%= project.author %>
            </h6>
            <p class="card-text">
              <strong> Description : </strong>
              <%= project.description %>
            </p>
  
            <div class="m-auto text-end">
                <a href="/project/<%=project._id%>" class="btn btn-primary m-auto" style="background-color: rgb(75 75 75); color: white; border-color: rgb(75, 75, 75)">Open project</a>
              </div>
              
          </div>
        </div>
        <% } %>
    </div>
    <script src="../assets//js/delete_project.js"></script>
  </body>